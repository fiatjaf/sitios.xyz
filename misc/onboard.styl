*
  box-sizing border-box

html, body
  margin 0
  padding 0
  background #5b7c99

h1
  margin 20px
  padding 0
  font-weight none
  font-family 'Signika', sans-serif
  font-size 3em
  color #f4f4f4
  text-shadow 3px 3px 10px #444

a
  color white

  &:hover, &:focus
    color #f3f3f3

#form
  height 100vh
  width 100vw
  display flex
  justify-content center
  align-items center
  align-content center

  & > *
    display block

input, .Select
  font-family sans-serif
  font-size 2em
  padding 10px
  margin 20px
  border 0
  background transparent
  color #f4f4f4
  outline 0

  &:not(:focus)
    border-bottom 1px solid rgba(255, 255, 255, 0.8)

button
  font-size 2em
  background #f4f4f4
  margin 20px
  border 0
  color #666
  padding 10px 20px
  box-shadow 3px 3px 12px #333
  outline 0
  border-radius 4px
  cursor pointer
  transition background-color ease-out 100ms 0ms
  font-weight bold

  &:focus
    background #e3e3e3
    color #444
    box-shadow 1px 1px 7px #333
    transform translate(1, 1)

#controls
  display flex
  justify-content space-between
  margin 20px
